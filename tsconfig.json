{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true, // Generate .d.ts files for TypeScript types
    "sourceMap": true,   // Generate source maps
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
